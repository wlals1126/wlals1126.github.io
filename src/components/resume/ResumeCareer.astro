---
import ResumeProject from './ResumeProject.astro'
import type { Career } from '../lib/resume/career'

type Props = {
	career: Career[]
}

const { career }: { career: Career[] } = Astro.props
---

<section class='mb-10'>
	<h2 class='text-3xl font-semibold mb-6'>업무 경력</h2>
	{
		career.map((company) => (
			<div class='mb-8'>
				<h3 class='text-xl font-bold text-stone-900 dark:text-white'>{company.companyName}</h3>
				<p class='text-gray-600 dark:text-gray-300'>
					{company.beginAt} - {company.endAt}
				</p>
				{company.team.map((team) => (
					<div class='mt-6 pl-6 border-l-2 border-gray-300 dark:border-gray-600'>
						<h4 class='text-lg font-semibold'>{team.teamName}</h4>
						<p class='text-gray-600 dark:text-gray-400'>
							{team.position} ({team.beginAt} - {team.endAt || '현재'})
						</p>
						<ResumeProject projects={team.projects} />
					</div>
				))}
			</div>
		))
	}
</section>
